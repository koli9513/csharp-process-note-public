<Window x:Class="ProcessNote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessNote"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ListView Margin="10" Name="ProcessInfo" Grid.RowSpan="2" SelectionChanged="Select_Row">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding name}" />
                    <GridViewColumn Header="PID" Width="50" DisplayMemberBinding="{Binding id}" />
                </GridView>
            </ListView.View>
        </ListView>
       <ListView Grid.Column="1" Grid.Row="0" x:Name="Attributes">
           <ListView.View>
               <GridView>
                   <GridViewColumn Header="CPU" Width="50" DisplayMemberBinding="{Binding cpu}" />
                   <GridViewColumn Header="RAM" Width="50" DisplayMemberBinding="{Binding memory}" />
                   <GridViewColumn Header="Running Time" Width="100" DisplayMemberBinding="{Binding runtime}" />
                   <GridViewColumn Header="Start Time" Width="100" DisplayMemberBinding="{Binding starttime}" />
               </GridView>
           </ListView.View>
       </ListView>
            
        <Button Click="ShowThreads_Click" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Left">Show threads</Button>
    </Grid>
</Window>
